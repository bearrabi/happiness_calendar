<div class="page_title">
  <h2 class="title">Calendar</h2>
</div>

<div class="date">
  <span><%= dateinfo.year.to_s %>年</span>
  <span><%= dateinfo.month.to_s %>月</span>
</div>

<div class="move">
  <%= link_to '◀️　Previus mont ' , "calendars/year/#{dateinfo.prev_month.year.to_s}/month/#{dateinfo.prev_month.month.to_s}" ,method: :post,remote: true %>
  <%= link_to 'Next month ▶' , "calendars/year/#{dateinfo.next_month.year.to_s}/month/#{dateinfo.next_month.month.to_s}", method: :post, remote: true %>
</div>


<div class="calendar">
  <table>
    <tr><th>日</th><th>月</th><th>火</th><th>水</th><th>木</th><th>金</th><th>土</th></tr>
    <% @calendars.each do |cal| %>
      <tr>
      <% cal.each do |week| %>
        <td>
          <p class="<%=week[:month] %>"><%= week[:day].to_s%></p>
          <div class="daybox">
            <%= link_to 'edit' , "" ,method: :post,remote: true %>
          </div>
        </td>
      <% end %>
      </tr>
    <% end %>
  </table>
</div>

