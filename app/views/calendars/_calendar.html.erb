<div class="page_title">
  <h2 class="title">Calendar</h2>
</div>

<div class="date">
  <span><%= dateinfo.year.to_s %>年</span>
  <span><%= dateinfo.month.to_s %>月</span>
</div>

<div class="change">
  <%= link_to '◀ Previus month ' , "calendars/year/#{dateinfo.prev_month.year.to_s}/month/#{dateinfo.prev_month.month.to_s}" ,method: :post,remote: true %>
  <%= link_to 'Next month ▶' , "calendars/year/#{dateinfo.next_month.year.to_s}/month/#{dateinfo.next_month.month.to_s}", method: :post, remote: true %>
</div>


<div class="calendar">
  <table>
    <tr><th class="wday-0">日</th><th class="wday-1">月</th><th class="wday-2">火</th><th class="wday-3">水</th><th class="wday-4">木</th><th class="wday-5">金</th><th class="wday-6">土</th></tr>
    <% @calendars.each_with_index do |cal, i| %>
      <tr>
      <% cal.each do |week| %>
        <td>
          <div class="daybox">
            <p class="<%= week[:month] %>-wday-<%= i%7 %>"><%= week[:day].to_s %></p>
            <%= link_to 'edit' , "" ,method: :post, remote: true, class: "edit" %>
          </div>
        </td>
      <% end %>
      </tr>
    <% end %>
  </table>
</div>

